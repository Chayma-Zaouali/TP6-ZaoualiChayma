@model IEnumerable<SchoolWebAppClient.Models.SchoolClient>

@{
    ViewData["Title"] = "GetSchoolByName";
}

<h1>Résultat de recherche par nom</h1>

<p>
    <a asp-action="CreateSchool">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.City)</th>
            <th>@Html.DisplayNameFor(model => model.Rating)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
v                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    @Html.ActionLink("Edit", "EditSchool", new { id = item.Id }) |
                    @Html.ActionLink("Details", "GetSchoolById", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteSchool", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
